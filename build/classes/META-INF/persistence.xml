<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ProjectManagementPU">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>tr.edu.ankara.blm489.models.User</class>
		<class>tr.edu.ankara.blm489.models.Employee</class>
		<class>tr.edu.ankara.blm489.models.Manager</class>
		<class>tr.edu.ankara.blm489.models.Admin</class>
		<class>tr.edu.ankara.blm489.models.Project</class>
		<class>tr.edu.ankara.blm489.models.Task</class>
		<class>tr.edu.ankara.blm489.models.Team</class>
		<class>tr.edu.ankara.blm489.models.Role</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="root" />
      		<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/projectmanagement?characterEncoding=UTF-8" />
    	</properties>
	</persistence-unit>
</persistence>
